<% provide(:title, 'Edit Book') %>

<div class="book">
  <h1>Edit Book</h1>

      <%= form_for [:admin, @book] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.label :blurb %>
        <%= f.text_area :blurb %>

        <%= f.label :author %>
        <%= f.text_field :author %>

        <%= f.label :author_about %>
        <%= f.text_area :author_about %>

        <%= f.submit "Save changes", class: "btn btn-large" %>
      <% end %>

  		<%= link_to "Cancel", admin_path %>

</div>

