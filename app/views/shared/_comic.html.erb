<div class="navbar navbar-static-top">
	<nav>
		<ul class="nav pull-left chapter-nav">
			<li>Chapter:</li>
			<% @chapters.each do |chapter| %>
				<li>
					<% if chapter.id == @page.chapter_id %>
						<%= link_to chapter.position,	chapter, class: "active" %>
					<% else %>
						<%= link_to chapter.position,	chapter %>
					<% end %>
				</li>
			<% end %>
		</ul>
	</nav>
	<nav>
		<ul class="nav pull-right page-nav">
			<li>

				<% if !@page.first? %>
					<%= link_to image_tag("prev.png", alt: "previous"), 
					    page_path(@page.higher_item), id: 'previous' %>
				<% else %>
					<% if !@chapter.first? %>
						<% prev_chapter = @chapter.higher_item %>
						<%= link_to image_tag("prev.png",	alt: "previous"), 
					    					page_path(prev_chapter.pages.last), id: 'previous' %>
					<% else %>
						<%= image_tag("prev.png", alt: "First page", 
																		title: "You're on the first page.", 
																		   id: 'previous', class: "inactive") %>
					<% end %>
				<% end %>

			</li>
			<li>

				<% if !@page.last? %>
					<%= link_to image_tag("next.png",	alt: "next"), 
					    				page_path(@page.lower_item), id: 'next' %>
				<% else %>
					<% if !@chapter.last? %>
						<% next_chapter = @chapter.lower_item %>
						<%= link_to image_tag("next.png",	alt: "next"), 
					    					page_path(next_chapter.pages.first), id: 'next' %>
					<% else %>
						<%= image_tag("next.png", alt: "Last page", 
																	  title: "You're on the last page.", 
																	     id: 'next', class: "inactive") %>
					<% end %>
				<% end %>

			</li>

		</ul>
	</nav>
</div>
<div class="comic-image">
	<%= image_tag @page.image.url %>
</div>